 <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.nixing.wxemjoygamehelper.MainActivity" >


    <Switch
        android:id="@+id/switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启用微信猜拳助手" />

    <RadioGroup
        android:id="@+id/dice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switch_btn"
        android:layout_below="@+id/switch_btn"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="39dp" >

        <RadioButton
            android:id="@+id/dice0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="  1 点" />

        <RadioButton
            android:id="@+id/dice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  2 点" />

        <RadioButton
            android:id="@+id/dice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  3 点" />

        <RadioButton
            android:id="@+id/dice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  4 点" />

        <RadioButton
            android:id="@+id/dice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  5 点" />

        <RadioButton
            android:id="@+id/dice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  6 点" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switch_btn"
        android:layout_below="@+id/switch_btn"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="11dp"
        android:text="骰子点数"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/dice"
        android:layout_marginTop="60dp"
        android:text="猜拳"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android1:id="@+id/jsb"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/dice"
        android1:layout_below="@+id/textView2"
        android1:layout_marginTop="25dp" >

        <RadioButton
            android1:id="@+id/jsb0"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="剪子" />

        <RadioButton
            android1:id="@+id/jsb1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="锤" />

        <RadioButton
            android1:id="@+id/jsb2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="包" />
    </RadioGroup>

</RelativeLayout>



